<div class="page-controls">
  <% if previous_image %>
      <%=
          link_to('', edition_image_set_url(edition, previous_image), {
              id: 'prev-page', title: 'Previous Page', alt: 'Previous Page', class: 'change-page'
          })
      %> 
  <% end %>

  <%= link_to('', edition_image_set_url(edition, image_set.parent, page: (image_set.position_in_level + 1)), { id: 'sbs-view', title: 'Reading View', alt: 'Reading View' }) unless image_set.image.url.nil? %>

  <% if next_image %>
      <%=
          link_to('', edition_image_set_url(edition, next_image),
             { id: 'next-page', title: 'Next Page', alt: 'Next Page', class: 'change-page' }
          )
      %>
  <% end %>
</div>
