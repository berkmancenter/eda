<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />

  <%= raw( "<noscript>#{ yield( :noscript ) }</noscript>" ) if yield( :noscript ) %>

  <% if yield( :title ).empty? %>
    <title>Emily Dickinson Archive</title>
  <% else %>
    <title><%= yield( :title ) %></title>
  <% end %>
  <meta name="viewport" content="width=device-width">

  <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon" />
  <link href='http://fonts.googleapis.com/css?family=PT+Serif:400,700,400italic' rel='stylesheet' type='text/css'>

  <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">
    
  
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
</head>
<body class="<%= body_class( params ) %>">
  <header>
    <h1>Emily Dickinson Archive</h1>

    <div class="menu-container">
      <% if ( params[ :action ] != 'home' ) %>
        <%= render( {
          partial: 'shared/main_nav',
          object: params
        } ) %>

        <span class="notice"><%= notice %></span>
        <span class="alert"><%= alert %></span>

        <%= render( {
          partial: 'shared/user_nav',
          object: params
        } ) %>
      <% end %>
    </div>

    <div class="hr"></div>
  </header>

<%= yield %>

  <footer>
    <div class="hr"></div>
    <nav class="footer">
      <ul>
        <li><%= link_to( '', 'http://cyber.law.harvard.edu', { class: 'berkman-link', title: 'Berkman Center for Internet and Society' } ) %></li>

        <li><%= link_to( 'Terms & Conditions', terms_url ) %></li>
        <li><%= link_to( 'Privacy', privacy_url ) %></li>
        <li><%= link_to( 'Contact Us', contact_url ) %></li>
      </ul>
    </nav>
    
  </footer>

  <%=
    if (false && Rails.env.development? )
        debug( params )
    end
  %>

</body>
</html>
