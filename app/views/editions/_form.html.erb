<%= semantic_form_for edition do |f| %>
    <%= f.inputs do %>
        <% if edition.new_record? %>
            <%= f.input :parent, include_blank: t(:empty_edition_choice), collection: Edition.is_public %>
        <% end %>
        <%= f.input :name %>
        <%= f.input :short_name %>
        <%= f.input :author %>
        <%= f.input :description, input_html: { rows: 10 } %>
        <%= f.input :work_number_prefix %>
    <% end %>
    <%= f.actions do %>
        <%= f.action :submit, button_html: { class: 'eda-btn-light' } %>
    <% end %>
<% end %>
