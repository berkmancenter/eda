<ul>
    <% @reading_list.works.each do |work| %>
        <%= render :partial => 'works/list_item', :locals => { :work => work } %>
    <% end %>
</ul>
<%= semantic_form_for @reading_list do |f| %>
    <%= f.inputs do %>
        <%= f.input :works, :as => :check_boxes, :member_label => :full_title %>
    <% end %>
    <%= f.actions %>
<% end %>
