<section class="work-reading-list">
  <% if user_signed_in? %>
      <% current_user.reading_lists.each do |reading_list| %>
          <h3 class="reading-list-heading" data-reading-list="<%= reading_list_path(reading_list) %>"><%= reading_list.name %></h3>
          <%= render partial: 'reading_lists/ajax_show', locals: { reading_list: reading_list.self_and_descendants } %>
      <% end %>
  <% else %>
      <p class="sign-in">
      <%= raw t(:reading_list_sign_in, sign_in_link: link_to(t(:sign_in), new_user_session_path)) %>
      </p>
  <% end %>
</section>

