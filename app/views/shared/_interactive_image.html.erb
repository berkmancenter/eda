<section class="interactive-image">
  <% if @image == nil || (@image.image_url || "").empty? %>
    <%= image_tag( image_path( "missing_image.jpg" ) ) %>
  <% else %>
    <script src="<%= @image.image_url %>.js?width=auto&height=512px"></script>
  <% end %>

  <div class="page-controls">
    <!-- TODO: link_to next page -->
    <a id="prev-page" href="#" title="Previous Page" alt="Previous Page" class="change-page"></a>
    <a id="sbs-view" href="#" title="Reading View" alt="Reading View"></a>
    <a id="next-page" href="#" title="Next Page" alt="Next Page" class="change-page"></a>
  </div>

  <div class="credits">
    <p>copyright so and so.</p>
    <p>copyright so and so.</p>
    <p>copyright so and so.</p>
  </div>
</section>

