<div id="search-panel" class="tab-menu panel">
    <a class="left drawer-handle" data-drawer="search-panel">
        <span><%= t :search_drawer_label %></span>
    </a>
    <ul class="panel-menu">
        <li><a href="#">Search</a></li>
        <li><a href="#">Browse</a></li>
        <li><a href="#">Lexicon</a></li>
    </ul>

    <div class="panel-content">
        <section class="search-works">
            <h1>Search Works</h1>
            <%= render partial: 'works/search_form', locals: { remote: true } %>
            <% if @search %>
                <%= render partial: "works/search_results_list" %>
            <% else %>
            <%# #5851 we need an empty results div for ajax search %>
                <div class="search-works-results"></div>
            <% end %>
        </section>
        <%= render partial: "works/browse" %>
        <%= render partial: "words/browse" %>
    </div>
</div>
