<% if user_signed_in? %>
    <%= collection_select(:user, :current_edition, Edition.all, :id, :name) %>
<% else %>
    <%= select_tag 'current_edition',
        options_from_collection_for_select(
            Edition.all,
            :id,
            :name,
            Edition.find(session[:current_edition]).id ||
            Edition.find_by_name(Eda::Application.config.emily['default_edition']).id)
    %>
<% end %>
