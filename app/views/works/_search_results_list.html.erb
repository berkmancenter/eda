<div class="search-works-results">
    <h2>
        <%= pluralize @search.total, 'result' %>
        for &quot;<span class="query"><%= params[:q] %></span>&quot;
    </h2>
    <ul>
        <% @search.hits.each do |work| %>
            <li><%= link_to render_work_result_link(Work.find( work.primary_key )), image_set_path_from_work(Work.find( work.primary_key ) ) %></li>
        <% end %>
    </ul>
</div>
