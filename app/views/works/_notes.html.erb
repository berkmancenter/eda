<div class="bottom drawer-handle" data-drawer=".work-notes"></div>
<div class="work-notes">
  <h2>Notes</h2>
  <% if user_signed_in? %>
      <%= render partial: 'shared/forms/note', locals:{ notable: @page.image_set, note: @note} %>
  <% else %>
      <p>Please <%= link_to 'sign in', new_user_session_path %> to add notes to this image.</p>
  <% end %>
</div>


