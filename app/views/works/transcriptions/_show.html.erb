<h3><%= work.full_title %></h3>
<% work.stanzas.each do |stanza| %>
    <p class="stanza linebreak-emily" data-number="<%= stanza.position %>">
    <% stanza.lines.each do |line| %>
        <span class="line" data-line="<%= line.number %>">
            <%= sanitize(render_line(line), tags: ['em', 'strong', 'ruby', 'rp', 'rt', 'br', 'span', 'p', 'ins', 'del']) %>
            <% unless line.just_author_break? %>
                <br class="emily author"/>
            <% end %>
        </span>
    <% end %>
    </p>
<% end %>
