<% cache cache_key_for_works(@works) do %>
<table class="works">
    <thead>
        <tr>
            <% unless @edition %>
                <th>Edition</th>
            <% end %>
            <th>Number</th>
            <th>Title</th>
            <th>Has Image</th>
            <th>Date</th>
            <th>Recipient</th>
        </tr>
    </thead>
    <tbody>
<% @works.each do |work| %>
    <tr>
        <% unless @edition %>
            <td><%= work.edition.name %></td>
        <% end %>
        <td><%= strip_tags work.full_id %></td>
        <td><%= link_to work.title, image_set_path_from_work(work) %></td>
        <td><%= work.has_image? %></td>
        <td><%= work.date.strftime('%Y') if work.date %></td>
        <td><%= work.metadata['Recipient'] if work.metadata['Recipient'] %></td>
    </tr>
<% end %>
    </tbody>
</table>
<% end %>
