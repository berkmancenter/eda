<%= form_tag search_works_path, remote: defined?(remote) ? remote : false, id: 'search-works' do %>
    <%= label_tag(:q, 'Search for:') %>
    <%= text_field_tag(:q, params[:q]) %>
    <%= button_tag raw("#{image_tag('search.png')} <span>Search</span>"), name: nil %>
    <div class="search-works-options">
        <a href="javascript:void(0);"><h2>Search options</h2></a>
        <%= select_tag 'current_edition',
            options_for_select(
                [['All', 'all']] + Edition.for_user(current_user).map{|e| [e.name, e.id]},
                session[:current_edition] ? Edition.find(session[:current_edition]).id : 'all'
            )
        %>
    </div>
<% end %>
